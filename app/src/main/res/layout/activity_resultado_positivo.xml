<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resultado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.br.apptopicos.ResultadoPositivoActivity">

    <TextView
        android:text="pontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultadoFinal"
        android:textSize="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/infoResultNegativo"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/infoResultNegativo2"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="@string/resultado_final_positivo_info01"
        android:layout_width="288dp"
        android:layout_height="143dp"
        android:id="@+id/infoResultNegativo"
        android:textSize="30dp"
        android:layout_marginStart="38dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline26"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:text="@string/resultado_final_positivo_info02"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:id="@+id/infoResultNegativo2"
        android:textSize="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline27"
        app:layout_constraintHorizontal_bias="0.54" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline26"
        app:layout_constraintGuide_begin="387dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="387dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline27"
        app:layout_constraintGuide_begin="486dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="486dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="134dp"
        app:srcCompat="@drawable/happy"
        android:id="@+id/imageView4"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
