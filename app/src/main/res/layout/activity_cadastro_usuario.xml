<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.br.apptopicos.CadastroUsuarioActivity">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        app:layout_constraintGuide_begin="15dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="15dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="511dp"
        android:id="@+id/guideline7"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="345dp"
        app:layout_constraintGuide_end="15dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline11"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="210dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_end="301dp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/cadastrologo"
        android:id="@+id/imageView"
        app:layout_constraintRight_toLeftOf="@+id/guideline7"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline11" />

    <android.support.constraint.Guideline
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline12"
        app:layout_constraintGuide_begin="465dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="465dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline14"
        app:layout_constraintGuide_begin="393dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="393dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:text="CANCELAR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancelar"
        app:layout_constraintTop_toTopOf="@+id/guideline14"
        app:layout_constraintBottom_toTopOf="@+id/guideline12"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:text="CADASTRAR"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/btnCadastrar"
        app:layout_constraintRight_toLeftOf="@+id/btnCancelar"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCancelar"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/Widget.AppCompat.Button.Colored" />

    <TextView
        android:text="UsuÃ¡rio:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        app:layout_constraintBaseline_toBaselineOf="@+id/cadNomeUsuario" />

    <TextView
        android:text="Senha:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintBaseline_toBaselineOf="@+id/cadPassword" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/cadPassword"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cadNomeUsuario"
        app:layout_constraintRight_toLeftOf="@+id/guideline7"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/cadNomeUsuario" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/cadNomeUsuario"
        app:layout_constraintTop_toTopOf="@+id/guideline17"
        app:layout_constraintRight_toLeftOf="@+id/guideline7"
        android:layout_marginEnd="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline17"
        app:layout_constraintGuide_begin="260dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="260dp"
        tools:layout_editor_absoluteX="0dp" />
</android.support.constraint.ConstraintLayout>
